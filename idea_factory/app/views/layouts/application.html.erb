<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button
            type="button"
            class="navbar-toggle collapsed"
            data-toggle="collapse"
            data-target="#awesome-answers-navbar">
            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
          </button>
        </div>

        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'New Ideas', new_idea_path %></li>
            <li><%= link_to 'All Ideas', ideas_path %></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
                <li>
                  <p class="navbar-text">Welcome <%= current_user.first_name.titleize %></p>
                </li>
                <li><%= button_to 'Sign Out', sessions_path, method: :delete, class: 'btn btn-default navbar-btn'%></li>
                <%#= link_to 'Your Favourite Posts', user_favourites_path(current_user) %>
            <% else %>
              <li><%= link_to 'Sign up', new_user_path %></li>
              <li><%= link_to 'Sign in', new_session_path %></li>
            <%end%>
          </ul>
        </div>
      </div>
    </nav>
    <% if notice || alert %>
       <div class="alert alert-<%= notice ? 'success' : 'danger'%> alert-dismissable" role="alert">
        <%= notice || alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
